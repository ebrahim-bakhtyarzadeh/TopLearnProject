@page
@model TopLearn.Web.Pages.Admin.Courses.IndexModel
@{
    ViewData["Title"] = "لیست دوره ها";
    List<string> RowColor = new List<string>() { "danger", "success" };
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست دوره ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست دوره های سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="col-md-12" style="margin: 10px 0;">

                    <a asp-page="CreateCourse" class="btn btn-outline btn-success">افزودن دوره جدید</a>

                </div>
            </div>
            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                <thead>
                    <tr>
                        <th>عکس دوره</th>
                        <th>عنوان دوره</th>
                        <th>تعداد جلسات</th>
                        <th>دستورات</th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var Course in Model.ListCourse)
                    {


                        <tr class="@RowColor[1]">
                            <td>
                                <img src="/Course/thumb/@Course.ImageName" class="thumbnail" />
                            </td>
                            <td>@Course.Title</td>
                            <td>@Course.EpisodeCount</td>

                            <td>
                                <a href="/Admin/Courses/EditCourse/@Course.CourseId" class="btn btn-warning">
                                    ویرایش
                                </a>
                                <a href="/Admin/Courses/IndexEpisode/@Course.CourseId" class="btn btn-danger ">
                                    اپیزود ها
                                </a>

                            </td>
                        </tr>







                    }
                </tbody>
            </table>

            <!-- /.panel-body -->
            <!-- /.panel -->
        </div>
    </div>
    <!-- /.col-lg-12 -->
</div>
