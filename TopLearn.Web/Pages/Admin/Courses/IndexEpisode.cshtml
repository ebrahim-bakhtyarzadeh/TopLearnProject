@page "{CourseId}"
@model TopLearn.Web.Pages.Admin.Courses.IndexEpisodeModel
@{

}
<div class="row">

    <div class="col-md-12">
        <h1>لیست قسمت ها </h1>

    </div>

</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
               لیست قسمت ها
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="col-md-12" style="margin: 10px 0;">

                    <a asp-page="CreateEpisode" asp-route-id="@ViewData["CourseId"].ToString()" class="btn btn-outline btn-success">افزودن قسمت جدید</a>

                </div>
            </div>
            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                <thead>
                    <tr>
                        
                        <th>عنوان قسمت</th>
                        <th>زمان قسمت</th>
                        <th>نوع دوره</th>
                        <th>دستورات</th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var Episode in Model.CourseEpisode)
                    {


                        <tr >
                            
                            <td>@Episode.EpisodeTitle</td>
                            <td>@Episode.EpisodeTime</td>
                            <td>@(Episode.IsFree==true?"رایگان":"قفل")</td>

                            <td>
                                <a href="/Admin/Courses/EditEpisode/@Episode.EpisodeId" class="btn btn-warning">
                                    ویرایش
                                </a>
                               

                            </td>
                        </tr>







                    }
                </tbody>
            </table>

            <!-- /.panel-body -->
            <!-- /.panel -->
        </div>
    </div>
    <!-- /.col-lg-12 -->
</div>
