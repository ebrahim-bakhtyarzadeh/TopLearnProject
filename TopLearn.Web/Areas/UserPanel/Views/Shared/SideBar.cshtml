@using TopLearn.Core.Convertors;
@using TopLearn.Core.DTOs;
@using TopLearn.Core.Service.Interface;
@inject IUserService _USerService
@inject IPermissionService _permissionService
@{
    SideBarUserPanelViewModel Model = _USerService.GetSideBarUserPanelData(User.Identity.Name);
}
<div class="col-md-3 col-sm-4 col-xs-12">
    <aside>

        <div class="avatar-layer">
            <div class="img-layer">
                <a href="sadas.com" class="change-image"><i class="zmdi zmdi-edit"></i></a>
                <img src="~/Avatars/@Model.ImageProfilePath">
            </div>
            <div class="detail">
                <span>  @Model.UserName </span>
                <span> @Model.RegisterDate.ToShamsi()  </span>
            </div>
        </div>

        <section>
            <header><h3> میز کار </h3></header>
            <div class="inner">
                <ul>
                    <li><a href="/UserPanel"> مشاهده حساب کابری </a></li>
                    <li><a href="/UserPanel/EditProfile"> ویرایش حساب کابری </a></li>
                    <li><a href="/UserPanel/ChangePassword"> تغییر رمز عبور </a></li>
                    <li><a href="/UserPanel/Wallet"> کیف پول من </a></li>
                    <li><a href="/UserPanel/MyOrder"> فاکتور های من </a></li>
                    <li><a href=""> تنظیمات حساب کاربری </a></li>
                    <li><a href="/Logout"> خروج از حساب کاربری </a></li>
                </ul>
            </div>
        </section>
        @if (_permissionService.CheckPermission(9, User.Identity.Name))
        {
            <section>
                <header><h3> پنل مدرس </h3></header>
                <div class="inner">
                    <ul>
                        <li><a asp-action="MasterCoursesList" asp-controller="Master"> مشاهده دوره ها </a></li>

                    </ul>
                </div>
            </section>
        }

    </aside>
</div>
